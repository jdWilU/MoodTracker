        <Label fx:id="label_welcome" prefHeight="25.0" prefWidth="216.0" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="User's Name" />
        <!-- Current Date -->
        <Label fx:id="current_date" prefHeight="20.0" prefWidth="233.0" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Current Date" />
    </VBox>
   <VBox layoutY="313.0" prefHeight="87.0" prefWidth="137.0" style="-fx-background-color: #ced4db;">
