               <ImageView fitHeight="36.0" fitWidth="30.0" layoutX="9.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/icons8-logout-64.png" />
                  </image>
               </ImageView>
               <Button fx:id="button_logout" layoutX="42.0" layoutY="1.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #FFFFFF;" text="Logout" textFill="#ced4db" />
