<VBox alignment="center" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.moodtracker.controller.ActivityController">
    <!-- Title Label -->
    <Label styleClass="title-label" text="Select Completed Activities">
        <VBox.margin>
            <Insets bottom="20" />
        </VBox.margin>
      <font>
         <Font size="24.0" />
      </font>
    </Label>

    <!-- GridPane Below Title -->
    <GridPane alignment="center" hgap="10" prefHeight="353.0" prefWidth="500.0" styleClass="grid-pane" vgap="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>


        <!-- Rows and columns configuration inside GridPane -->
        <VBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <ImageView fitHeight="60" fitWidth="60">
                <Image url="@Images/sports.png" />
            </ImageView>
            <Label styleClass="small-label" text="Sports" />
        </VBox>

        <VBox alignment="center" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <ImageView fitHeight="60" fitWidth="60">
