        <!-- Navigation Buttons -->
        <!-- Navigation Buttons -->
        <Button fx:id="button_back" style="-fx-background-color: #20e49f;" text="Back" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="button_next" style="-fx-background-color: #20e49f;" text="next" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="3" />

