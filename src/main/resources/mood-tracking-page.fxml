<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: 000000;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.moodtracker.controller.MoodSelectionController">
    <ImageView fitHeight="613.0" fitWidth="818.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@Images/background.png" />
        </image>
    </ImageView>
    <Pane layoutX="187.0" layoutY="152.0" prefHeight="200.0" prefWidth="200.0" />
    <AnchorPane layoutX="101.0" layoutY="160.0" prefHeight="293.0" prefWidth="615.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 15;">
        <children>
            <ImageView fitHeight="70.0" fitWidth="63.0" layoutX="546.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@Images/img.png" />
                </image>
            </ImageView>
            <Label layoutX="21.0" layoutY="59.0" text="Enter your mood by selecting one of the checkboxes below" textFill="#2cb2ff">
                <font>
                    <Font name="System Italic" size="16.0" />
                </font>
            </Label>
            <Label layoutX="50.0" layoutY="9.0" text="How are you feeling right now?" textFill="#2cb2ff">
                <font>
                    <Font name="System Bold" size="27.0" />
                </font>
            </Label>
            <MeshView />
            <RadioButton fx:id="badRadioButton" layoutX="99.0" layoutY="201.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="10.0" style="-fx-text-fill: transparent;" text="BAD">
            <toggleGroup>
               <ToggleGroup fx:id="moodToggleGroup" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="poorRadioButton" layoutX="202.0" layoutY="201.0" mnemonicParsing="false" prefHeight="16.0" prefWidth="16.0" style="-fx-text-fill: transparent;" text="POOR" toggleGroup="$moodToggleGroup">
            <font>
               <Font name="AdobeHeitiStd-Regular" size="12.0" />
            </font></RadioButton>
            <RadioButton fx:id="okayRadioButton" layoutX="303.0" layoutY="199.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="22.0" style="-fx-text-fill: transparent;" text="OKAY" toggleGroup="$moodToggleGroup" />
            <RadioButton fx:id="goodRadioButton" layoutX="404.0" layoutY="199.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="16.0" style="-fx-text-fill: transparent;" text="GOOD" toggleGroup="$moodToggleGroup" />
            <RadioButton fx:id="greatRadioButton" layoutX="507.0" layoutY="199.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="18.0" style="-fx-text-fill: transparent;" text="GREAT" toggleGroup="$moodToggleGroup" />
            <Button fx:id="button_moodback" layoutX="7.0" layoutY="13.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="29.0" style="-fx-background-color: transparent;" textFill="WHITE">
                <graphic>
                    <ImageView fitHeight="23.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@Images/icons8-back-arrow-50.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
         <Button fx:id="button_moodsubmit" layoutX="549.0" layoutY="234.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="39.0" style="-fx-background-color: trasnaprent;">
            <graphic>
               <ImageView fitHeight="44.0" fitWidth="40.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/icons8-back-arrow-50.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <ImageView fitHeight="86.0" fitWidth="96.0" layoutX="64.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Images/icons8-bad.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="86.0" fitWidth="96.0" layoutX="166.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Images/icons8-poor.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="86.0" fitWidth="96.0" layoutX="267.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Images/icons8-okay.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="86.0" fitWidth="96.0" layoutX="369.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Images/icons8-good.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="86.0" fitWidth="96.0" layoutX="471.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Images/icons8-great.png" />
            </image>
         </ImageView>
        </children>
    </AnchorPane>
</AnchorPane>
